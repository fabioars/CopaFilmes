{
  "name": "copa-filmes",
  "version": "1.0.0",
  "description": "A Copa do Mundo de Filmes",
  "author": "Fabio Soares <fabioars@live.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf build && tsc -p tsconfig.json",
    "start": "npm run build && node build/app.js",
    "start:dev": "tsc-watch --onSuccess \"node build/app.js\"",
    "start:debug": "tsc-watch --onSuccess \"node --inspect-brk build/app.js\"",
    "start:production": "node build/app.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "http-status-code": "^2.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
